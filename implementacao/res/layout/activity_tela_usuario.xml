<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutTelaUsuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="br.ufg.inf.es.sinoa.TelaUsuario"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/notificacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/notificacoes" />

    <Button
        android:id="@+id/notas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/notas" />

    <Button
        android:id="@+id/avisos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/avisos_biblioteca" />

    <Button
        android:id="@+id/comunicados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/comunicados"
        android:onClick="iniciaTelaComunicado" />

    <Button
        android:id="@+id/configuracoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/configuracoes" />

</LinearLayout>